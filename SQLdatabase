CREATE TABLE trainer(
    id INT AUTO_INCREMENT PRIMARY KEY,
    nickname VARCHAR(50),
    password VARCHAR(50) NOT NULL
);

CREATE TABLE pokemon(
	id_pokedex INT PRIMARY KEY,
    name VARCHAR(50) NOT NULL
);

CREATE TABLE entrenador_tiene (
    trainer_id INT,
    pokemon_id INT,
    cantidad INT,
    cp INT,
    PRIMARY KEY (trainer_id, pokemon_id),
    FOREIGN KEY (trainer_id) REFERENCES trainer(id),
    FOREIGN KEY (pokemon_id) REFERENCES pokemon(id_pokedex)
) ENGINE=InnoDB;

CREATE TABLE tipos (
    tipo VARCHAR(50) PRIMARY KEY
);

CREATE TABLE pokemon_es_tipo (
    pokemon_id INT,
    tipo VARCHAR(50),
    PRIMARY KEY (pokemon_id,tipo),
    FOREIGN KEY (tipo) REFERENCES tipos(tipo),
    FOREIGN KEY (pokemon_id) REFERENCES pokemon(id_pokedex)
) ENGINE=InnoDB;
